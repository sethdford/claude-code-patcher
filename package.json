{
  "name": "claude-code-patcher",
  "version": "2.0.0",
  "description": "Feature gate detection, analysis, and patching for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-patcher": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "gates": "node dist/cli.js gates",
    "gates:scan": "node dist/cli.js gates scan",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "feature-gates",
    "statsig",
    "tengu"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}

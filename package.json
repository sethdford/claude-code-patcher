{
  "name": "claude-code-patcher",
  "version": "1.0.0",
  "description": "Extend Claude Code with custom native tools - no MCP required",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-patcher": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "patch": "node dist/cli.js patch",
    "unpatch": "node dist/cli.js unpatch",
    "list": "node dist/cli.js list",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "tools",
    "patcher",
    "extension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
